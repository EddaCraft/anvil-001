{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "composite": true
  },
  "include": ["src/**/*"],
  "references": [
    {
      "path": "../core"
    }
  ]
}
