{
  "hooks": {
    "post-tool-use": [
      {
        "name": "python-lint",
        "matcher": {
          "tool": "Edit|MultiEdit|Write",
          "file_patterns": ["*.py"]
        },
        "command": "ruff check $FILE --fix --quiet || echo 'Ruff linting applied'",
        "timeout": 10000
      },
      {
        "name": "python-format",
        "matcher": {
          "tool": "Edit|MultiEdit|Write",
          "file_patterns": ["*.py"]
        },
        "command": "black $FILE --quiet || echo 'Black formatting applied'",
        "timeout": 5000
      },
      {
        "name": "python-type-check",
        "matcher": {
          "tool": "Edit|MultiEdit|Write",
          "file_patterns": ["*.py"]
        },
        "command": "mypy $FILE --no-error-summary || echo 'Type checking completed'",
        "timeout": 10000
      }
    ],
    "pre-tool-use": [
      {
        "name": "pytest-before-commit",
        "matcher": {
          "tool": "Bash",
          "command_patterns": ["git commit"]
        },
        "command": "pytest --quiet --tb=short || echo 'Tests failed - review before proceeding'",
        "timeout": 30000
      },
      {
        "name": "security-check-before-push",
        "matcher": {
          "tool": "Bash",
          "command_patterns": ["git push"]
        },
        "command": "bandit -r . -ll -q || echo 'Security issues detected'",
        "timeout": 15000
      }
    ]
  }
}
