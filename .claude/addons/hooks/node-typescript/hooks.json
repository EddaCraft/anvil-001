{
  "hooks": {
    "post-tool-use": [
      {
        "name": "lint-after-edit",
        "matcher": {
          "tool": "Edit|MultiEdit|Write",
          "file_patterns": ["*.js", "*.ts", "*.jsx", "*.tsx"]
        },
        "command": "pnpm run lint --silent || echo 'Linting failed - consider running: pnpm run lint:fix'",
        "timeout": 10000
      },
      {
        "name": "type-check-after-edit",
        "matcher": {
          "tool": "Edit|MultiEdit|Write",
          "file_patterns": ["*.ts", "*.tsx"]
        },
        "command": "pnpm run typecheck --silent || tsc --noEmit --pretty",
        "timeout": 15000
      },
      {
        "name": "format-after-edit",
        "matcher": {
          "tool": "Edit|MultiEdit|Write",
          "file_patterns": ["*.js", "*.ts", "*.jsx", "*.tsx", "*.json", "*.md"]
        },
        "command": "pnpm exec prettier --write $FILE || echo 'Auto-formatting applied'",
        "timeout": 5000
      }
    ],
    "pre-tool-use": [
      {
        "name": "test-before-commit",
        "matcher": {
          "tool": "Bash",
          "command_patterns": ["git commit"]
        },
        "command": "pnpm test -- --passWithNoTests --silent || echo 'Tests failed - review before proceeding'",
        "timeout": 30000
      },
      {
        "name": "security-scan-before-push",
        "matcher": {
          "tool": "Bash",
          "command_patterns": ["git push"]
        },
        "command": "pnpm audit --audit-level moderate || echo 'Security vulnerabilities detected'",
        "timeout": 20000
      }
    ]
  }
}
