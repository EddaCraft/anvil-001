# Use pnpm strict peer dependencies
strict-peer-dependencies=false

# Auto-install peers
auto-install-peers=true

# Use hoisted node_modules layout for better compatibility
node-linker=hoisted

# Shamefully-hoist to avoid some dependency resolution issues
shamefully-hoist=true

# Save exact versions
save-exact=false

# Use workspace protocol for local dependencies
link-workspace-packages=true
