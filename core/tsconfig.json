{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmitOnError": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "composite": true
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["dist", "node_modules"]
}
