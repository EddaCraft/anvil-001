{
  "name": "adapters",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/adapters/src",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/adapters",
        "main": "packages/adapters/src/index.ts",
        "tsConfig": "packages/adapters/tsconfig.lib.json",
        "assets": ["packages/adapters/*.md"]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  }
}
